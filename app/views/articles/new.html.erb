<h3 class="text-center">Adding New Article</h3>

<div class="row">
  <div class="col-12">
    <%= form_with model: @article, class: 'form-horizontal', role: 'form' do |f| %>
      <div class="row">
        <div class="col-md-1 py-2">
          <%= f.label 'Title', class: 'form-label' %>
        </div>
        <div class="col-md-11 py-2">
          <%= f.text_field :title, class: 'form-control', placeholder: 'Title of article', autofocus: true %>
        </div>
        <div class="col-md-1 py-2">
          <%= f.label 'Body', class: 'form-label' %>
        </div>
        <div class="col-md-11 py-2">
          <%= f.text_field :body, class: 'form-control', rows: 10, placeholder: 'Body of article' %>
        </div>
      </div>
      <div class="row">
        <div class="offset-md-1 col-md-11 py-2">
          <%= f.submit class: 'btn btn-primary btn-lg float-end' %>
        </div>
      </div>
    <% end %>
  </div>
</div>