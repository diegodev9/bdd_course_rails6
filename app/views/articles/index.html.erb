<div class="mt-5">
  <%= link_to 'New Article', new_article_path, class: 'btn btn-primary btn-lg', id: 'new-article-btn' %>
  <% @articles.each do |article| %>
    <div class="card my-2">
      <div class="card-body">
        <%= link_to article.title, article_path(article), class: 'card-title' %>
        <p class="card-text"><%= truncate(article.body, length: 500) %></p>
      </div>
    </div>
  <% end %>
</div>
